<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>My Orders</title>
    <%- include('../header-files-new') %>
</head>
<body class="hidden-bar-wrapper">

<div class="page-wrapper">
    <%- include("user_navbar") %>
    <%- include('customer-bread-crumb') %>

    <div class="container py-5">
        <div class="table-responsive">
            <table class="table table-bordered table-dark table-hover">
                <thead>
                <tr>
                    <% const headings = ['Product', 'Price', 'Discount', 'Net Price', 'Quantity', 'Total']; %>
                    <%- include('../components/tableHeading', {headings: headings}) %>
                </tr>
                </thead>
                <tbody>
                <% for(let x of records) { %>
                    <tr>
                        <td>
                            <img src="/<%- x.photo %>" alt="<%= x.product_name %>" width="50">
                            <p class="mb-0 text-white"><%= x.product_name %></p>
                        </td>
                        <td>&#x20b9; <%= x.price %></td>
                        <td><%= x.discount %></td>
                        <td>
                            <% let discountedAmount = (parseInt(x.price) * parseInt(x.discount)) / 100 %>
                            <% let netPrice = parseInt(x.price) - discountedAmount %>
                            <%= netPrice %>
                        </td>
                        <td><%= x.quantity %></td>
                        <td><%= netPrice * parseInt(x.quantity) %></td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../footer') %>
</div>

<%- include("../footer_scripts") %>

</body>
</html>